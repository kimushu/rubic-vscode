// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}" ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/out/src/**/*.js" ],
            "preLaunchTask": "npm"
        },
        {
            "name": "Launch Extension (w/server)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}" ],
            "env": {
                "DEBUG_SERVER_PORT": "4711"
            },
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/out/src/**/*.js" ],
            "preLaunchTask": "npm"
        },
        {
            "name": "Launch Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}", "--extensionTestsPath=${workspaceRoot}/out/test" ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/out/test/**/*.js" ],
            "preLaunchTask": "npm"
        },
        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/out/src/debug/rubicDebugSession.js",
            "args": ["--server=4711"],
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/out/**/*.js"],
            "windows": {
                "runtimeExecutable": "C:\\Program Files (x86)\\Microsoft VS Code\\Code.exe"
            },
            "osx": {
                "runtimeExecutable": "/Applications/Visual Studio Code.app/Contents/MacOS/Electron"
            },
            "env": {
                "ELECTRON_RUN_AS_NODE": "1"
            }
        }
    ],
    "compounds": [
        {
            "name": "Extension & Server",
            "configurations": ["Launch Extension (w/server)", "Launch Server"]
        }
    ]
}
